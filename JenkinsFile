pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                git 'https://github.com/srikarimmidisetty/WEBAPP.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'cd simple-web-app && mvn clean package'
            }
        }

        stage('Run') {
            steps {
                // Run the Spring Boot application
                sh 'chmod 777  simple-web-app-1.0.0.jar && java -jar target/simple-web-app-1.0.0.jar'
            }
        }
    }
}

